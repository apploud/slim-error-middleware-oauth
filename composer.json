{
	"name": "apploud/slim-error-middleware-oauth",
	"description": "league/oauth2-server integration for apploud/slim-error-middleware",
	"license": "MIT",
	"authors": [
		{
			"name": "Jan Konáš",
			"email": "jan.konas@apploud.cz",
			"role": "Developer"
		}
	],
	"require": {
		"php": "^8.0",
		"psr/http-factory": "^1.0",
		"psr/http-message": "^1.0 || ^2.0",
		"apploud/slim-error-middleware": "^0.3 || ^0.4",
		"league/oauth2-server": "^8.1 || ^9.0"
	},
	"autoload": {
		"psr-4": {
			"Apploud\\OAuthErrorMiddleware\\": "src"
		}
	},
	"require-dev": {
		"roave/security-advisories": "dev-latest",
		"phpunit/phpunit": "^9.5",
		"mockery/mockery": "^1.5",
		"php-parallel-lint/php-parallel-lint": "^1.3",
		"phpstan/phpstan": "^1.4",
		"phpstan/phpstan-strict-rules": "^1.1",
		"phpstan/phpstan-phpunit": "^1.0",
		"phpstan/phpstan-mockery": "^1.0",
		"slevomat/coding-standard": "^8.0",
		"phing/phing": "^3.0"
	},
	"autoload-dev": {
		"psr-4": {
			"Apploud\\OAuthErrorMiddleware\\Test\\": "tests"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
